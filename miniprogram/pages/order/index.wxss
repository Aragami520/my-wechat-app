/* pages/order/index.wxss */

/* 1. 强制页面背景色 (跟您的个人中心一致) */
page {
  background-color: #f7f8fa !important; 
  min-height: 100vh;
}

/* 2. 容器设置：左右只留 24rpx 的边距 */
.container {
  padding: 24rpx !important; 
  box-sizing: border-box;
  width: 100%;
}

/* 空状态文字 */
.empty-box {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

/* 3. 卡片样式：纯白、大圆角、占满容器 */
.order-card {
  background-color: #ffffff !important;
  border-radius: 24rpx; /* 大圆角 */
  padding: 30rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box; /* 防止宽度溢出 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04); /* 很淡的高级阴影 */
}

/* --- 下面是内部布局，保持不变 --- */

/* 头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.time { font-size: 24rpx; color: #999; }
.status-box { font-size: 28rpx; font-weight: bold; }

/* 商品区 */
.card-body {
  display: flex;
  margin-bottom: 24rpx;
}
.goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: #f8f8f8;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-name { 
  font-size: 30rpx; 
  font-weight: 600; 
  color: #333; 
}
.goods-detail { font-size: 24rpx; color: #999; }
.goods-price { font-size: 32rpx; color: #333; font-weight: bold; }

/* 物流条 */
.express-box {
  background: #f7f9f7; /* 极淡绿色 */
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  border: 1px solid #e8f5e9;
}
.exp-label { font-size: 24rpx; color: #666; }
.exp-no { font-size: 26rpx; font-weight: bold; color: #333; margin-left: 10rpx;}
.btn-copy {
  font-size: 20rpx;
  color: #1aad19;
  border: 1px solid #1aad19;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-left: 10rpx;
}

/* 按钮区 */
.card-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1px dashed #eee;
  padding-top: 24rpx;
}

.btn {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 查物流 - 橙色 */
.btn-trace {
  color: #fa8c16;
  border: 1px solid #fa8c16;
  background: #fff;
}
/* 退款 - 灰色 */
.btn-refund {
  color: #666;
  border: 1px solid #ddd;
  background: #fff;
}
/* 删除 - 浅灰 */
.btn-delete {
  color: #999;
  border: 1px solid #eee;
  background: transparent;
}