/* pages/cart/index.wxss */
page { background: #f5f7fa; padding-bottom: 120rpx; }

.empty-cart { text-align: center; padding: 100rpx; color: #999; }

.cart-item {
  background: #fff; margin: 20rpx; padding: 20rpx; border-radius: 16rpx;
  display: flex; align-items: center;
}

.checkbox {
  width: 40rpx; height: 40rpx; border: 2rpx solid #ccc; border-radius: 50%;
  margin-right: 20rpx; display: flex; align-items: center; justify-content: center;
}
.checkbox.checked { background: #ffc300; border-color: #ffc300; color: #fff; font-size: 28rpx; font-weight: bold;}

.g-img { width: 140rpx; height: 140rpx; border-radius: 10rpx; background: #eee; }
.g-info { flex: 1; margin-left: 20rpx; display: flex; flex-direction: column; justify-content: space-between; height: 140rpx; }
.g-name { font-size: 28rpx; color: #333; }
.g-price { font-size: 32rpx; color: #ff3300; font-weight: bold; }
.g-count { font-size: 24rpx; color: #999; }

.del-btn { padding: 20rpx; font-size: 32rpx; }

/* 底部结算栏 */
.footer-bar {
  position: fixed; bottom: 0; left: 0; width: 100%; height: 100rpx;
  background: #fff; display: flex; align-items: center; justify-content: space-between;
  padding: 0 30rpx; box-sizing: border-box; box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}
.all-check { display: flex; align-items: center; font-size: 26rpx; }
.total-box { font-size: 28rpx; }
.t-price { color: #ff3300; font-weight: bold; font-size: 36rpx; }
.settle-btn {
  background: #ffc300; color: #333; font-weight: bold;
  padding: 16rpx 40rpx; border-radius: 40rpx; font-size: 28rpx;
}